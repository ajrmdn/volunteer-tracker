<h3><%= @volunteer.name %></h3>

<form action="/volunteer/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit</label>
  <input id="name" name="name" type="text" value="<%= @volunteer.name %>">

  <button type="submit">Update Volunteer</button>
</form>

<form class="" action="/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" name="button">Delete</button>
</form>
<a href="/">Back to home</a>
